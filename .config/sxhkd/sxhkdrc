#
# wm independent hotkeys
#

# terminal emulator
alt + Return
	st

# program launcher
#alt + @space
#rofi
alt + d
	rofi -show run -opacity "50"

# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd

#browser
alt + b
	brave


#Print screen
Print
	flameshot full -p /home/salil/Pictures

#Print part of the screen
alt + Print
	flameshot gui -p /home/salil/Pictures

#calculator
alt + c
	st -n calc -e bc

#ranger
alt + n
	st -e ranger

#pcmanfm
alt + shift + n
		pcmanfm

#spotify
alt + m
	spotify

##spotify controls https://github.com/pwittchen/spotify-cli-linux

alt + grave
	spotifycli --playpause

alt + period
	spotifycli --next

alt + comma
	spotifycli --prev

alt + slash
	dunstctl history-pop

alt + y
	st -e btm

#gnome control center
alt + shift + g
	env XDG_CURRENT_DESKTOP=GNOME gnome-control-center

#switch between displays
alt + shift + s
	/home/salil/.scripts/display.sh

#Get emoji
alt + shift + e
	/home/salil/.scripts/getemoji

#helper
alt + shift + h
	zathura ~/.local/helper.pdf

#blur toggle
alt + shift + b
	/home/salil/.scripts/blur_toggle

# volume
F6
	amixer -D pulse sset Master 2%+

F5
	amixer -D pulse sset Master 2%-

F3
	amixer set Master toggle


#light settings
F9
	xbacklight -inc 5
F8
	xbacklight -dec 5

# Pull up vim manual
alt + shift + v
	groff -ms /home/salil/.local/vim_manual.ms -Tpdf | zathura -

# bspwm hotkeys

#

# quit/restart bspwm
alt + shift + r
	bspc wm -r

alt + shift + BackSpace
	/home/salil/.scripts/shut

# close and kill
alt + {_,shift+ }q
	bspc node -{c,k}


#
# state/flags
#

# set the window state
alt + {t,shift + t,shift+f,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
alt + super + {m,l,s,p,h}
	bspc node -g {marked,locked,sticky,private,hidden}

#
# focus/swap
#



# focus the node in the given direction
alt + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
#alt + {p,b,comma,period}
#	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
#alt + {_,shift + }c
#	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
alt + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
#alt + {grave,Tab}
#	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
#alt + {o,i}
#	bspc wm -h off; \
#	bspc node {older,newer} -f; \
#	bspc wm -h on

# focus or send to the given desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
alt + p + :{Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# preselect the ratio
alt + p + :{1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
alt + p + :{space}
	bspc node -p cancel

# cancel the preselection for the focused desktop
alt + p + :{shift +}{space}
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + alt + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
